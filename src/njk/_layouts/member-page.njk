{% extends '_layouts/base.njk' %}

{% block page_title %}{{ queen.members }}{% endblock %}

{% block page_description %} An information page about {{ queen.members }}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src {{members.image}} alt="{{queen.members}} image" class="img-fluid">
        <p>{{ queen.members }}</p>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block blurb %}
        <h1>{{ queen.members }}</h1>
        <p>{{ members.text }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}