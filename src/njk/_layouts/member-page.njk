{% extends '_layouts/base.njk' %}
{% block page_title %}{{ member.name }}{% endblock %}

{% block page_description %} Detail page entry for {{ member.name }}. {% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src="img/members/{{ member.image }}" alt="{{ member.name }} image" class="img-fluid">
        <p class="caption">{{ member.name }}</p>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
        <h1>{{ member.name }}</h1>
        <p>{{ member.text }}</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}