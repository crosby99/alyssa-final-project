{% extends '_layouts/base.njk' %}
{% set tour = tours.tourdates %}

{% block page_title %} Tours {% endblock %}
{% block page_description %} Tourdates for Queen {% endblock %}

{% block content %}
<div class="container">
    <div class="row">
      <div class="col-sm">
        <h1 class="tour"> 2020 Tours </h1>
      </div>
    </div>
</div>      
<div class="container"> 
  <div class="row">
    <div class="col-sm">          
      <table class="table table-hover text-center mx-auto">
          <thead>
            <tr>
              <th>Date</th>
              <th>City</th>
              <th>Venue</th>
            </tr>
          </thead>
        {% for tour in tours.tourdates %} 
          <tbody>
            <tr>
              <td>{{tour.date}}</td>
              <td>{{tour.city}}</td>
              <td>{{tour.venue}}</td> 
            </tr>
          </tbody>
        {% endfor %}
      </table> 
    </div>
  </div>
</div>
{% endblock %}
