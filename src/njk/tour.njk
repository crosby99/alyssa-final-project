{% extends '_layouts/base.njk' %}
{% set tour = tours.tourdates %}

{% block page_title %} Tours {% endblock %}
{% block page_description %} Tourdates for Queen {% endblock %}

{% block content %}
<div class="container">
    <div class="row">
      <div class="col-sm">
      <h1 class="tour" style="text-align:center"> Tours </h1>
      <div id= "content">
</div>
  <div class="container">           
  <table class="table table-hover" style="text-align:center">
    <thead>
      <tr>
        <th>Date</th>
        <th>City</th>
        <th>Venue</th>
      </tr>
    </thead>
    {% for tour in tours.tourdates %} 
    <tbody>
      <tr>
        <td>{{tour.date}}</td>
        <td>{{tour.city}}</td>
        <td>{{tour.venue}}</td>  
    {% endfor %}
    </div>
      </div>
      </div>
{% endblock %}
