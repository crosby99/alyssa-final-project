{% extends '_layouts/base.njk' %}
{% set discography = queen.discography %}

{% block page_title %} Discography {% endblock %}
{% block page_description %} Queen Discography {% endblock %}

{% block content %}
<div class="container">
    <h1 class="discography center"> Discography </h1>
    <div class="row">
          {% for discography in queen.discography %}
          <div class="col-sm-6 col-md-4">
            <div class="card text-center mb-4">
                <img src="img/discs/{{discography.image}}" class="img-fluid card-img-top" alt="{{discography.title}}">
                <div class="card-body">
                  <h4 class="card-title">{{discography.title}}</h4>
                  <h5 class="card-text">{{discography.year}}</h5>
                </div>
            </div>
          </div>
         {% endfor %}
    </div>
</div>
{% endblock %}
